<h1><%= @post.title %> </h1>

<!-- <p>will have post image at some point</p> -->

<h6><%=@post.date %></h6>


<% if @post.post_photo.attached? %>
  <%= image_tag @post.post_photo %>
<% end %>



<p><%= @post.content_body %></p>

<p><%= link_to "Go back to list of posts", posts_path %></p>



<!-- <p>below 2 links will be hidden in the future unless the user is logged in </p> -->

<p><%= link_to "Edit this post", edit_post_path(@post) %></p>

<p><%= link_to "Delete", post_path(@post),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></p>
