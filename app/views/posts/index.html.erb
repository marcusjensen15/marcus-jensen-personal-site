<h1>My Posts</h1>

<% if @posts.any? %>
<ul>
  <% @posts.each do |post| %>
  <li>  <%= link_to post.title, post_path(post)%> </li>
  <% end %>
</ul>
<% else %>
<p>There are no posts yet</p>
<% end %>


<!-- <p>In the future these 'create new post' link below will be hidden unless the user is logged in </p> -->

<p><%= link_to "Create a new post", new_post_path %></p>
